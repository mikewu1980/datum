<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
       	http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
       	http://www.springframework.org/schema/mvc
       	http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
       	http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.2.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

	<!-- 扫描MVC的包 -->
	<context:component-scan base-package="org.mas.stock.usl.controller"
		name-generator="org.mas.stock.usl.common.CustomAnnotationBeanNameGenerator" />

	<!-- 激活自动代理功能 -->
	<aop:aspectj-autoproxy proxy-target-class="true" />

	<!-- fastjson转换requestbody和javabean -->
	<mvc:annotation-driven>
		<mvc:message-converters register-defaults="true">
			<bean class="org.mas.stock.usl.common.JsonpFastJsonHttpMessageConverter">
				<property name="features">
					<list>
						<value>PrettyFormat</value>
						<value>QuoteFieldNames</value>
						<value>SkipTransientField</value>
						<!-- <value>WriteDateUseDateFormat</value> -->
						<value>NotWriteRootClassName</value>
						<value>DisableCircularReferenceDetect</value>
					</list>
				</property>
			</bean>
			<bean class="org.springframework.http.converter.FormHttpMessageConverter" />
		</mvc:message-converters>
	</mvc:annotation-driven>

	<bean class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver">
		<property name="defaultViews">
			<list>
				<bean class="org.mas.stock.usl.common.JsonpFastJsonJsonView">
					<property name="extractValueFromSingleKeyModel">
						<value>true</value>
					</property>
					<property name="features">
						<list>
							<value>PrettyFormat</value>
							<value>QuoteFieldNames</value>
							<value>SkipTransientField</value>
							<!-- <value>WriteDateUseDateFormat</value> -->
							<value>NotWriteRootClassName</value>
							<value>DisableCircularReferenceDetect</value>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<mvc:resources mapping="/static/**" location="/static/" />

	<!--配置拦截器, 多个拦截器,顺序执行 -->
	<!-- 当设置多个拦截器时，先按顺序调用preHandle方法，然后逆序调用每个拦截器的postHandle和afterCompletion方法 -->
	<!-- 匹配的是url路径， 如果不配置或/**,将拦截所有的Controller -->
	<mvc:interceptors>
		<mvc:interceptor>
			<!-- 定义在mvc:interceptor下面的表示是对特定的请求才进行拦截的 -->
			<mvc:mapping path="/**" />
			<bean class="org.mas.stock.usl.interceptor.ParameterCheckInterceptor"></bean>
		</mvc:interceptor>
